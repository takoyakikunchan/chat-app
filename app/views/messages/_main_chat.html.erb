
<div class="main-header">
  <div class="chat-name">
    <h1>room1</h1>
  </div>
  <div class="exit-button">
    <a href="#">チャットを終了する</a>
  </div>
</div>

<div class="main-contents">
  
   <div class="message">
     <div class="upper-message">
       <div class="message-name">kana aihara</div>
       <div class="date">2017/11/11</div>
     </div>
       <div class="lower-message">
         <div class="comment">hello</div>
       </div>
    </div>

    <div class="message">
     <div class="upper-message">
       <div class="message-name">mika</div>
       <div class="date">2017/11/11</div>
     </div>
       <div class="lower-message">
         <div class="comment">hi</div>
       </div>
    </div>
    

</div>




<%= form_with model: [@room, @message], html: {class: "main-footer"}, local: true do |f|%>
  <div class="form-input">
    <%= f.text_field :content, class: 'type-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'send-button' %>
<% end %>





